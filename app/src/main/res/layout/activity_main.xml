<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="248dp"
            android:layout_height="38dp" android:id="@+id/status" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.892" tools:text="@string/statusBar" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.565" android:textSize="24sp"/>
    <ImageView
            android:layout_width="409dp"
            android:layout_height="450dp" app:srcCompat="@drawable/grid"
            android:id="@+id/imageView"
            android:contentDescription="@string/grid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="383dp"
            android:layout_height="361dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.428">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView9"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="0"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView8"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/image7"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView6"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="3"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView5"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="4"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView4"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="5"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView3"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="6"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView2"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="7"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageView1"
                    android:layout_weight="1" android:padding="20sp" android:onClick="playerTap" android:tag="8"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TicTac"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp" app:fontFamily="sans-serif"
            android:textSize="24sp" android:textStyle="bold" android:id="@+id/textView"/>
    <Button
            android:text="Start Again"
            android:layout_width="148dp"
            android:layout_height="43dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" android:onClick="startAgain"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:id="@+id/winnerText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.088"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>